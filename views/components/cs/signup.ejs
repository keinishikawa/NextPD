<!DOCTYPE html>
<html>
  <head>
    <%- include("../../parts/head.ejs"); %>
  </head>
  <body>
    <div class="sign">
      <div class="container">
        <%- include("../../parts/servicename.ejs"); %>
        <div class="panel">
          <h2>新規登録</h2>
          <% if (errors.length > 0) { %>
          <ul class="errors">
            <% errors.forEach(error => { %>
            <li><%= error %></li>
            <% }); %>
          </ul>
          <% } %>
          <form action="/cs/signup" method="post">
            <p>ユーザー名</p>
            <input type="text" name="username" />
            <p>メールアドレス</p>
            <input type="text" name="email" />
            <p>パスワード</p>
            <input type="password" name="password" />
            <input type="submit" value="登録する" />
            <a href="/cs">ログイン画面に戻る</a>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
